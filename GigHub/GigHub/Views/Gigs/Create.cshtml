@model GigHub.ViewModels.GigFromViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using(Html.BeginForm("Create","Gigs"))
{ 
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(n => n.Venue)
        @Html.TextBoxFor(n => n.Venue, new { @class = "form-control" })
        @Html.ValidationMessageFor( n => n.Venue)
    </div>
    <div class="form-group">
        @Html.LabelFor(n => n.Date)
        @Html.TextBoxFor(n => n.Date, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.Date)
    </div>
    <div class="form-group">
        @Html.LabelFor(n => n.Time)
        @Html.TextBoxFor(n => n.Time, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.Time)
    </div>
    <div class="form-group">
        @Html.LabelFor(n => n.Genre)
        @Html.DropDownListFor(n=> n.Genre, new SelectList(Model.Genres,"Id","Name"),"", new { @class="form-control"})
        @Html.ValidationMessageFor(n => n.Genre)
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}
